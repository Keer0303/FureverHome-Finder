{"ast":null,"code":"export default {\n  name: 'Home',\n  data() {\n    return {\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\n      notices: [],\n      animalData: [],\n      dialogVisible: false,\n      selectedAnimal: {}\n    };\n  },\n  created() {\n    this.$request.get('/notice/selectAll').then(res => {\n      this.notices = res.data || [];\n    });\n    this.loadAnimal();\n  },\n  methods: {\n    loadAnimal() {\n      this.$request.get('/animal/selectAll').then(res => {\n        if (res.code === '200') {\n          this.animalData = res.data;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    adopt(animal) {\n      // Check if the user is an administrator\n      if (this.user.role === 'ADMIN') {\n        this.$message.warning('Administrators cannot adopt pets. Your role does not support this action.');\n        return; // Exit the function if the user is an administrator\n      }\n\n      let data = JSON.parse(JSON.stringify(animal));\n      data.status = 'Adopted';\n      this.$request.put('/animal/update', data).then(res => {\n        if (res.code === '200') {\n          this.$message.success('Adoption Succeeded');\n          this.loadAnimal();\n          let adoptData = {\n            userId: this.user.id,\n            animalId: data.id\n          };\n          this.$request.post('/adopt/add', adoptData).then(res => {\n            if (res.code !== '200') {\n              this.$message.error(res.msg);\n            }\n          });\n        } else {\n          this.$message.error('Failed to update animal status');\n        }\n      }).catch(error => {\n        this.$message.error('An error occurred while updating animal status');\n      });\n    },\n    showDetails(animal) {\n      this.selectedAnimal = animal;\n      this.dialogVisible = true;\n    },\n    handleClose(done) {\n      this.dialogVisible = false;\n      done();\n    }\n  }\n};","map":{"version":3,"names":["name","data","user","JSON","parse","localStorage","getItem","notices","animalData","dialogVisible","selectedAnimal","created","$request","get","then","res","loadAnimal","methods","code","$message","error","msg","adopt","animal","role","warning","stringify","status","put","success","adoptData","userId","id","animalId","post","catch","showDetails","handleClose","done"],"sources":["src/views/manager/Home.vue"],"sourcesContent":["<template>\n  <div>\n    <div class=\"card\" style=\"padding: 15px; font-size: 24px; font-weight: bold\">\n      Hello, {{ user?.name }}! Welcome to Furever Home Finder!\n    </div>\n\n    <div style=\"display: flex; margin: 10px 0\">\n      <div style=\"width: 100%;\" class=\"card\">\n        <!--   Notice     -->\n        <div style=\"margin-bottom: 30px; font-size: 20px; font-weight: bold\">Notice</div>\n        <div >\n          <el-timeline reverse slot=\"reference\">\n            <el-timeline-item v-for=\"item in notices\" :key=\"item.id\" :timestamp=\"item.time\">\n              <el-popover\n                  placement=\"right\"\n                  width=\"200\"\n                  trigger=\"hover\"\n                  :content=\"item.content\">\n                <span slot=\"reference\">{{ item.title }}</span>\n              </el-popover>\n            </el-timeline-item>\n          </el-timeline>\n        </div>\n        <!--Pet Info-->\n        <div style=\"margin-bottom: 20px; font-size: 20px; font-weight: bold; color: #1F618D\">Adopt love, one paw at a time.</div>\n        <div>\n          <el-row>\n            <el-col :span=\"5\" v-for=\"item in animalData\" :key=\"item.id\">\n              <div class=\"card\" style=\"background-color: #f8f4e8; text-align: center\">\n                <img :src=\"item.img\" alt=\"\" style=\"width: 80px; height: 80px; border-radius: 50%; object-fit: cover;\">\n                <div style=\"font-weight: bold; color: #817a70; margin-top: 5px\">{{ item.name }} <br>（{{ item.species }}）</div>\n                <div style=\"color: #575353; font-size: 13px; margin-top: 5px\">Sex：{{ item.sex }}， Age：{{ item.age }}， <span style=\"color: #7d3d0c\">{{ item.status }}</span></div>\n                <div style=\"margin-top: 15px; color: #4b4949; text-align: left\">About me：<br>{{ item.descr }}</div>\n                <div>\n                  <el-button type=\"success\" size=\"mini\" style=\"margin-top: 20px\" :disabled=\"item.status === 'Adopted' || item.status === 'In Process'\" @click=\"adopt(item)\">申请领养/联系管理员申请领养</el-button>\n\n                  <el-button type=\"primary\" size=\"mini\" style=\"margin-top: 20px\" @click=\"showDetails(item)\">View Details</el-button>\n                </div>\n              </div>\n            </el-col>\n          </el-row>\n        </div>\n      </div>\n    </div>\n\n    <el-dialog :visible.sync=\"dialogVisible\" width=\"30%\" :before-close=\"handleClose\">\n      <span slot=\"title\">{{ selectedAnimal.name }}'s Details</span>\n      <div>\n        <img :src=\"selectedAnimal.img\" alt=\"\" style=\"width: 300px; height: 300px; display: block; margin: 0 auto; object-fit: contain;\">\n        <div style=\"text-align: center; margin-top: 10px; font-weight: bold; font-size: 18px\">{{ selectedAnimal.name }}</div>\n        <div style=\"margin-top: 10px\">Species: {{ selectedAnimal.species }}</div>\n        <div>Sex: {{ selectedAnimal.sex }}</div>\n        <div>Age: {{ selectedAnimal.age }}</div>\n        <div>Status: <span :style=\"{ color: selectedAnimal.status === 'Adopted' ? '#7d3d0c' : '#000' }\">{{ selectedAnimal.status }}</span></div>\n        <div style=\"margin-top: 10px\">About me: {{ selectedAnimal.descr }}</div>\n      </div>\n      <div slot=\"footer\" class=\"dialog-footer\">\n        <el-button @click=\"dialogVisible = false\">Close</el-button>\n      </div>\n    </el-dialog>\n  </div>\n</template>\n\n<script>\nexport default {\n  name: 'Home',\n  data() {\n    return {\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\n      notices: [],\n      animalData: [],\n      dialogVisible: false,\n      selectedAnimal: {},\n    }\n  },\n  created() {\n    this.$request.get('/notice/selectAll').then(res => {\n      this.notices = res.data || []\n    })\n    this.loadAnimal()\n  },\n  methods: {\n    loadAnimal() {\n      this.$request.get('/animal/selectAll').then(res => {\n        if (res.code === '200') {\n          this.animalData = res.data\n        } else {\n          this.$message.error(res.msg)\n        }\n      })\n    },\n\n    adopt(animal) {\n      // Check if the user is an administrator\n      if (this.user.role === 'ADMIN') {\n        this.$message.warning('Administrators cannot adopt pets. Your role does not support this action.');\n        return; // Exit the function if the user is an administrator\n      }\n\n      let data = JSON.parse(JSON.stringify(animal));\n      data.status = 'Adopted';\n\n      this.$request.put('/animal/update', data).then(res => {\n        if (res.code === '200') {\n          this.$message.success('Adoption Succeeded');\n          this.loadAnimal();\n\n          let adoptData = {\n            userId: this.user.id,\n            animalId: data.id\n          };\n\n          this.$request.post('/adopt/add', adoptData).then(res => {\n            if (res.code !== '200') {\n              this.$message.error(res.msg);\n            }\n          });\n        } else {\n          this.$message.error('Failed to update animal status');\n        }\n      }).catch(error => {\n        this.$message.error('An error occurred while updating animal status');\n      });\n    },\n\n    showDetails(animal) {\n      this.selectedAnimal = animal;\n      this.dialogVisible = true;\n    },\n\n    handleClose(done) {\n      this.dialogVisible = false;\n      done();\n    },\n  }\n}\n</script>\n\n<style scoped>\n.el-col-5{\n  width: 20%;\n  max-width: 20%;\n  padding: 10px 10px;\n}\n</style>\n"],"mappings":"AAgEA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,IAAA,EAAAC,IAAA,CAAAC,KAAA,CAAAC,YAAA,CAAAC,OAAA;MACAC,OAAA;M