{"ast":null,"code":"export default {\n  name: 'Home',\n  data() {\n    return {\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\n      notices: [],\n      animalData: []\n    };\n  },\n  created() {\n    this.$request.get('/notice/selectAll').then(res => {\n      this.notices = res.data || [];\n    });\n    this.loadAnimal();\n  },\n  methods: {\n    loadAnimal() {\n      this.$request.get('/animal/selectAll').then(res => {\n        if (res.code === '200') {\n          this.animalData = res.data;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    adopt(animal) {\n      // Check if the user is an administrator\n      if (this.user.role === 'ADMIN') {\n        this.$message.warning('Administrators cannot adopt pets. Your role does not support this action.');\n        return; // Exit the function if the user is an administrator\n      }\n\n      let data = JSON.parse(JSON.stringify(animal));\n      data.status = 'Adopted';\n      this.$request.put('/animal/update', data).then(res => {\n        if (res.code === '200') {\n          this.$message.success('Adoption Succeeded');\n          this.loadAnimal();\n          let adoptData = {\n            userId: this.user.id,\n            animalId: data.id\n          };\n          this.$request.post('/adopt/add', adoptData).then(res => {\n            if (res.code !== '200') {\n              this.$message.error(res.msg);\n            }\n          });\n        } else {\n          this.$message.error('Failed to update animal status');\n        }\n      }).catch(error => {\n        this.$message.error('An error occurred while updating animal status');\n      });\n    }\n  }\n};","map":{"version":3,"names":["name","data","user","JSON","parse","localStorage","getItem","notices","animalData","created","$request","get","then","res","loadAnimal","methods","code","$message","error","msg","adopt","animal","role","warning","stringify","status","put","success","adoptData","userId","id","animalId","post","catch"],"sources":["src/views/manager/Home.vue"],"sourcesContent":["<template>\n  <div>\n    <div class=\"card\" style=\"padding: 15px\">\n      Hello, {{ user?.name }}! Welcome to the system\n    </div>\n\n    <div style=\"display: flex; margin: 10px 0\">\n      <div style=\"width: 100%;\" class=\"card\">\n        <!--   Notice     -->\n        <div style=\"margin-bottom: 30px; font-size: 20px; font-weight: bold\">Notice</div>\n        <div >\n          <el-timeline reverse slot=\"reference\">\n            <el-timeline-item v-for=\"item in notices\" :key=\"item.id\" :timestamp=\"item.time\">\n              <el-popover\n                  placement=\"right\"\n                  width=\"200\"\n                  trigger=\"hover\"\n                  :content=\"item.content\">\n                <span slot=\"reference\">{{ item.title }}</span>\n              </el-popover>\n            </el-timeline-item>\n          </el-timeline>\n        </div>\n        <!--Pet Info-->\n        <div style=\"margin-bottom: 20px; font-size: 20px; font-weight: bold; color: #1F618D\">Adopt love, one paw at a time.</div>\n        <div>\n          <el-row>\n            <el-col :span=\"5\" v-for=\"item in animalData\">\n              <div class=\"card\" style=\"background-color: #f8f4e8; text-align: center\">\n                <img :src=\"item.img\" alt=\"\" style=\"width: 80px; height: 80px; border-radius: 50%\">\n                <div style=\"font-weight: bold; color: #817a70; margin-top: 5px\">{{ item.name }} <br>（{{ item.species }}）</div>\n                <div style=\"color: #575353; font-size: 13px; margin-top: 5px\">Sex：{{ item.sex }}， Age：{{ item.age }}， <span style=\"color: #7d3d0c\">{{ item.status }}</span></div>\n                <div style=\"margin-top: 15px; color: #4b4949; text-align: left\">About me：<br>{{ item.descr }}</div>\n                <div>\n                  <el-button type=\"success\" size=\"mini\" style=\"margin-top: 20px\" :disabled=\"item.status ==='Adopted'\" @click=\"adopt(item)\">Adopt</el-button>\n                </div>\n              </div>\n            </el-col>\n          </el-row>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\n\nexport default {\n  name: 'Home',\n  data() {\n    return {\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\n      notices: [],\n      animalData: [],\n    }\n  },\n  created() {\n    this.$request.get('/notice/selectAll').then(res => {\n      this.notices = res.data || []\n    })\n    this.loadAnimal()\n  },\n  methods: {\n    loadAnimal() {\n      this.$request.get('/animal/selectAll').then(res => {\n        if (res.code === '200') {\n          this.animalData = res.data\n        } else {\n          this.$message.error(res.msg)\n        }\n      })\n    },\n\n    adopt(animal) {\n      // Check if the user is an administrator\n      if (this.user.role === 'ADMIN') {\n        this.$message.warning('Administrators cannot adopt pets. Your role does not support this action.');\n        return; // Exit the function if the user is an administrator\n      }\n\n      let data = JSON.parse(JSON.stringify(animal));\n      data.status = 'Adopted';\n\n      this.$request.put('/animal/update', data).then(res => {\n        if (res.code === '200') {\n          this.$message.success('Adoption Succeeded');\n          this.loadAnimal();\n\n          let adoptData = {\n            userId: this.user.id,\n            animalId: data.id\n          };\n\n          this.$request.post('/adopt/add', adoptData).then(res => {\n            if (res.code !== '200') {\n              this.$message.error(res.msg);\n            }\n          });\n        } else {\n          this.$message.error('Failed to update animal status');\n        }\n      }).catch(error => {\n        this.$message.error('An error occurred while updating animal status');\n      });\n    },\n  }\n}\n</script>\n<style scoped>\n.el-col-5{\n  width: 20%;\n  max-width: 20%;\n  padding: 10px 10px;\n}\n</style>"],"mappings":"AA+CA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,IAAA,EAAAC,IAAA,CAAAC,KAAA,CAAAC,YAAA,CAAAC,OAAA;MACAC,OAAA;MACAC,UAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,QAAA,CAAAC,GAAA,sBAAAC,IAAA,CAAAC,GAAA;MACA,KAAAN,OAAA,GAAAM,GAAA,CAAAZ,IAAA;IACA;IACA,KAAAa,UAAA;EACA;EACAC,OAAA;IACAD,WAAA;MACA,KAAAJ,QAAA,CAAAC,GAAA,sBAAAC,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAG,IAAA;UACA,KAAAR,UAAA,GAAAK,GAAA,CAAAZ,IAAA;QACA;UACA,KAAAgB,QAAA,CAAAC,KAAA,CAAAL,GAAA,CAAAM,GAAA;QACA;MACA;IACA;IAEAC,MAAAC,MAAA;MACA;MACA,SAAAnB,IAAA,CAAAoB,IAAA;QACA,KAAAL,QAAA,CAAAM,OAAA;QACA;MACA;;MAEA,IAAAtB,IAAA,GAAAE,IAAA,CAAAC,KAAA,CAAAD,IAAA,CAAAqB,SAAA,CAAAH,MAAA;MACApB,IAAA,CAAAwB,MAAA;MAEA,KAAAf,QAAA,CAAAgB,GAAA,mBAAAzB,IAAA,EAAAW,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAG,IAAA;UACA,KAAAC,QAAA,CAAAU,OAAA;UACA,KAAAb,UAAA;UAEA,IAAAc,SAAA;YACAC,MAAA,OAAA3B,IAAA,CAAA4B,EAAA;YACAC,QAAA,EAAA9B,IAAA,CAAA6B;UACA;UAEA,KAAApB,QAAA,CAAAsB,IAAA,eAAAJ,SAAA,EAAAhB,IAAA,CAAAC,GAAA;YACA,IAAAA,GAAA,CAAAG,IAAA;cACA,KAAAC,QAAA,CAAAC,KAAA,CAAAL,GAAA,CAAAM,GAAA;YACA;UACA;QACA;UACA,KAAAF,QAAA,CAAAC,KAAA;QACA;MACA,GAAAe,KAAA,CAAAf,KAAA;QACA,KAAAD,QAAA,CAAAC,KAAA;MACA;IACA;EACA;AACA"},"metadata":{},"sourceType":"module","externalDependencies":[]}